<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Pizza Store</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/pizzaStores/<%= pizzaStore._id %>?_method=put"
      method="post"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="storeName">Store Name</label>
        <input
          class="form-control"
          type="text"
          name="pizzaStore[storeName]"
          id="storeName"
          value="<%= pizzaStore.storeName %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="pizzaStore[location]"
          id="location"
          value="<%= pizzaStore.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Pizza Price</label>
        <div class="input-group">
          <span class="input-group-text id=price">$</span>
          <input
            type="text"
            class="form-control"
            aria-label="price"
            id="price"
            placeholder="0"
            name="pizzaStore[price]"
            value="<%= pizzaStore.price %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="pizzaStore[description]"
          id="description"
          required
        >
<%= pizzaStore.description %>
        </textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="formFileMultiple" class="form-label"
          >Add more image(s)</label
        >
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <% pizzaStore.images.forEach(function(img, i) { %>
        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            name="deleteImages[]"
            value="<%= img.filename %>"
            id="image-<%= i %>"
          />
        </div>
        <label for="image-<%= i %>">Delete?</label>
        <% }) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Update Pizza Store</button>
      </div>
    </form>
    <a href="/pizzaStores/<%= pizzaStore._id %>">Back to Pizza Store</a>
  </div>
</div>
