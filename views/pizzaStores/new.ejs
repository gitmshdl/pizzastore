<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Pizza Store</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card shadow">
      <div class="card-body">
        <form
          action="/pizzaStores"
          method="post"
          novalidate
          class="validated-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="storeName">Store Name</label>
            <input
              class="form-control"
              type="text"
              name="pizzaStore[storeName]"
              id="storeName"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input
              class="form-control"
              type="text"
              name="pizzaStore[location]"
              id="location"
              required
            />
            <div class="valid-feedback">Looks good!</div>

            <!-- <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="pizzaStore[image]"
          id="image"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div> -->

            <div class="mb-3">
              <label class="form-label" for="price">Pizza Price</label>
              <div class="input-group">
                <span class="input-group-text id=price">$</span>
                <input
                  type="text"
                  class="form-control"
                  aria-label="price"
                  id="price"
                  placeholder="0"
                  name="pizzaStore[price]"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="description">Description</label>
              <textarea
                class="form-control"
                type="text"
                name="pizzaStore[description]"
                id="description"
                required
              ></textarea>
              <div class="valid-feedback">Looks good!</div>
            </div>
          </div>
          <div class="mb-3">
            <label for="formFileMultiple" class="form-label"
              >Choose image(s)</label
            >
            <input
              class="form-control"
              type="file"
              id="image"
              name="image"
              multiple
            />
          </div>
          <div class="mb-3">
            <button class="btn btn-success">Add Pizza Store</button>
          </div>
        </form>
      </div>
    </div>
    <a href="/pizzaStores">All Pizza Stores</a>
  </div>
</div>
